@model AdminPostIndexViewModel
@{
    ViewData["Title"] = @Model.PostTypeTitle + " - مدیریت نوشته ها";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h3 class="page-title">
    مدیریت نوشته ها - (@Model.PostTypeTitle)
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-flag"></i>
            <a asp-controller="Home" asp-action="Index"> داشبرد</a>
            <i class="fa fa-angle-left"></i>
        </li>
        <li>
            <i class="fa fa-flag"></i>
            <a href="#">مدیریت @Model.PostTypeTitle </a>
            <i class="fa fa-angle-left"></i>
        </li>

    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-file"></i>مدیریت نوشته ها
                </div>
                <div class="actions">
                    <a href="javascript:;" class="btn default btn-sm">
                        <i class="fa fa-share icon-black"></i> Share
                    </a>
                    <div class="btn-group">
                        <a class="btn btn-sm green" href="javascript:;" data-toggle="dropdown">
                            <i class="fa fa-user"></i> عملیات <i class="fa fa-angle-down "></i>
                        </a>
                        <ul class="dropdown-menu pull-right" style="font-family: 'IRANsans'">
                            <li>
                                <a asp-controller="Post" asp-action="New" asp-route-postType="@Model.PostTypeSlug">
                                    <i class="fa fa-pencil"></i> ایجاد نوشته جدید
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;">
                                    <i class="fa fa-trash-o"></i> Delete
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;">
                                    <i class="fa fa-ban"></i> Ban
                                </a>
                            </li>
                            <li class="divider">
                            </li>
                            <li>
                                <a href="javascript:;">
                                    <i class="i"></i> Make admin
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                


          <table class="table table-bordered">
         <thead>
            <tr>
                <th>عنوان</th>
                <th>دسته بندی</th>
                <th>مشخصات</th>
                <th>وضعیت</th>
                <th>عملیات</th>
            </tr>
        </thead>

                    @foreach (var post in Model.DataSource.Items) {
                        string stateClassName = "todo-tasklist-item-border-yellow";
                        string badgeClassName = "";
                        switch(post.Status) {
                            case Behlog.Core.Models.Enum.PostStatus.Deleted:
                                stateClassName = "todo-tasklist-item-border-red";
                                badgeClassName = "danger";
                                break;
                            case Behlog.Core.Models.Enum.PostStatus.Draft:
                                stateClassName = "todo-tasklist-item-border-yellow";
                                badgeClassName = "warning";
                                break;
                            case Behlog.Core.Models.Enum.PostStatus.Planned:
                                stateClassName = "todo-tasklist-item-border-blue";
                                badgeClassName = "primary";
                                break;
                            case Behlog.Core.Models.Enum.PostStatus.Published:
                                stateClassName = "todo-tasklist-item-border-green";
                                badgeClassName = "success";
                                break;
                        }
                       

                        <tr>
                            <td>
                            <div class="todo-tasklist-item-title">
                                @post.Title
                            </div>
                            </td>

                            <td>
                                 <div class="col-sm-8">
                                    <span class="todo-tasklist-date"> @post.CategoryTitle</span>
                                    @foreach(var tag in post.Tags) {
                                        <span class="todo-tasklist-date"><i class="fa fa-tag"></i>@tag</span>
                                    }
                                </div>
                            </td>

                            <td>
                                <table class="table table-borderless">
                                        <tr>
                                            <td><i class="fa fa-user"></i> ایجادکننده</td>
                                            <td>@post.CreatorUserTitle</td>
                                        </tr>
                                        <tr>
                                            <td><i class="fa fa-calendar"></i> تاریخ ایجاد </td>
                                            <td>@post.CreateDateDisplay</td>
                                        </tr>
                                        <tr>
                                            <td><i class="fa fa-calendar"></i>آخرین تعییر در</td>
                                            <td>@post.ModifyDateDisplay</td>
                                        </tr>
                                        <tr>
                                            <td><i class="fa fa-calendar"></i> تاریخ انتشار</td>
                                            <td> @if (post.Status == Behlog.Core.Models.Enum.PostStatus.Published) {
                                                <span class="todo-tasklist-date">
                                                     : @post.PublishDateDisplay 
                                                </span>
                                            }</td>
                                        </tr>
                                        <tr>
                        

                                </table>

                    </td>
                            <td>
                                <center><span class="badge badge-@badgeClassName"> @post.StatusDisplay</span></center>
                            </td>
                            <td>
                                <div class="row">
                            
                                    <a style="text-decoration: none;" title="ویرایش" 
                                       asp-controller="Post" 
                                       asp-action="Edit" 
                                       asp-route-id="@post.Id">

                                       <div style="margin-right: 10px;" class="input-inline">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-edit"></i>
                                                </span>
                                            </div>
                                       </div>

                                    </a>
                                    <a style="text-decoration: none;" title="مشاهده"
                                       asp-area="" 
                                       asp-controller="Post"
                                       asp-action="Detail"
                                       asp-route-id="@post.Id"
                                       asp-route-postType="@Model.PostTypeSlug"
                                       asp-route-slug="@post.Slug">
                                       <div class="input-inline">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-eye"></i>
                                                </span>
                                            </div>
                                        </div>
                                       </a>
                                    <a style="text-decoration: none;" title="حذف" href="#">
                                        <div class="input-inline">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="fa fa-trash"></i>
                                                </span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
            
                            </td>
                        </tr>

                    }

                </div>
          </table>
            </div>
        </div>
    </div>


    </div>

