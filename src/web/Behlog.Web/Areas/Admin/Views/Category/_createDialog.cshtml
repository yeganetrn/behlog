@model CategoryCreateViewModel

<div id="createDialog" class="modal fade" tabindex="-1" data-width="400" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">

                    <div class="caption">
                        <i class="fa fa-plus"></i>ایجاد دسته بندی جدید
                    </div>
            </div>

            <div class="modal-body">
                <form id="myform" asp-controller="Category" asp-action="New" asp-antiforgery="true" method="post"
                    class="form-horizontal">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-12">

                                <div class="form-group">
                                    <label asp-for="Title" class="col-md-3 control-label"></label>
                                    <div class="col-md-6">
                                        <input asp-for="Title" class="form-control input-circle-right" />
                                        <span asp-validation-for="Title" class="help-block"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Slug" class="col-md-3 control-label"></label>
                                    <div class="col-md-6">
                                        <input asp-for="Slug" class="form-control input-circle-right" />
                                        <span asp-validation-for="Slug" class="help-block"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LangId" class="col-md-3 control-label"></label>
                                    <div class="col-md-6">
                                        <select asp-for="LangId" asp-items="Model.LanguageSelectList"
                                            class="form-control input-medium">
                                        </select>
                                        <span class="help-block" asp-validation-for="LangId"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="col-md-3 control-label"></label>
                                    <div class="col-md-6">
                                        <textarea asp-for="Description" class="form-control input-circle"
                                            style="height: 120px"></textarea>
                                        <span class="help-block" asp-validation-for="Description"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-actions col-md-12" style="border-top: 1px solid #e5e5e5; padding: 10px;">
                                <div class="row col-md-offset-3 col-md-9">
                                    <button type="submit" class="btn green" href="#stack2" style="margin-top: 10px;">
                                        <i class="fa fa-check"></i>ذخیره</button>
                                    <button type="button" data-dismiss="modal" class="btn btn-danger"
                                        style="margin-top: 10px;">
                                        <i class="fa fa-remove"></i>انصراف</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>